/* Clock */
setColor 1 1 1 1

// Change color momentarly if pickup
if %SHOW_PICKUP > 0
	if %PICKUP_ITEM == #ITEM_RED_ARMOR
		setColor 1 0 0 1 // red
		// draws optional clock
		setFont "clockfont_19"
		setAlign #CENTER, #TOP
		setCursor 400, 318
		setSize 32 32
		drawClock
	endif
	if %PICKUP_ITEM == #ITEM_YELLOW_ARMOR
		setColor 1 1 0 1 // yellow
		// draws optional clock
		setFont "clockfont_19"
		setAlign #CENTER, #TOP
		setCursor 400, 318
		setSize 32 32
		drawClock
	endif
	if %PICKUP_ITEM == #ITEM_GREEN_ARMOR
		setColor 0 1 0 1 // green
		// draws optional clock
		setFont "clockfont_19"
		setAlign #CENTER, #TOP
		setCursor 400, 318
		setSize 32 32
		drawClock
	endif
	if %PICKUP_ITEM == #ITEM_MEGA_HEALTH
		setColor 1 0 1 1 // magenta
		// draws optional clock
		setFont "clockfont_19"
		setAlign #CENTER, #TOP
		setCursor 400, 318
		setSize 32 32
		drawClock
	endif
	if %PICKUP_ITEM == #ITEM_QUAD_DAMAGE
		setColor 1 0.5 0 1 // orange
		// draws optional clock
		setFont "clockfont_19"
		setAlign #CENTER, #TOP
		setCursor 400, 318
		setSize 32 32
		drawClock
	endif
	if %PICKUP_ITEM == #ITEM_WARSHELL
		setColor 0 1 1 1 // cyan
		// draws optional clock
		setFont "clockfont_19"
		setAlign #CENTER, #TOP
		setCursor 400, 318
		setSize 32 32
		drawClock
	endif
endif

setCursor #WIDTH / 2, 0
moveCursor 0, 4

setFont "clockfont_35"
if %VIDHEIGHT <= 1024
	setFont "clockfont_23"
	if %VIDHEIGHT < 720
		setFont "clockfont_19"
		if %VIDHEIGHT < 600
			setFont "clockfont_11"
		endif
	endif
endif
setAlign 2 1 //can't be vertically aligned (bug or something)
moveCursor 0 20
drawClock


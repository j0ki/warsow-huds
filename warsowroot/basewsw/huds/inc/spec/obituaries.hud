if %RACE == 0
	// draws the kill log in the upper right corner of the screen
	setAlign #RIGHT, #TOP
	setCursor #WIDTH - 6, 60
	// character-space vs resolution
	setSize 260, 340
	setFont "virtue_10"
	if %VIDWIDTH >= 1152
		setSize 280, 340
		setFont "virtue_12"
		if %VIDWIDTH > 1280
			setSize 300, 340
			setFont "virtue_16"
		endif
	endif
	drawObituaries #RIGHT, 15			// aligned to right, iconsize 15
endif